write_files:
- path: /etc/environment
  encoding: ""
  content: |
    KUBECONFIG=/etc/rancher/k3s/k3s.yaml
    K3S_KUBECONFIG_MODE=0644
  owner: root
  permissions: '0644'

- path: /etc/local.d/airgap.sh
  content: |-
    #!/bin/bash
    ISO=$(blkid | grep 'TYPE="iso9660"' | grep 'LABEL="K3OS"' | cut -d: -f1)
    if [ -n $ISO ] ; then
      MNT=/mnt
      mkdir -p $MNT
      mount -o ro $ISO $MNT
      if [ -d $MNT/airgap ] ; then
        IMGDIR="/var/lib/rancher/k3s/agent/images"
        echo "Copy airgap images to '$IMGDIR'"
        mkdir -p $IMGDIR
        cp -p $MNT/airgap/*.tar $IMGDIR
      fi
      umount $MNT
    fi
    # remove system-upgrade-controller
    MANIFEST="/var/lib/rancher/k3s/server/manifests"
    rm -rf $MANIFEST/system-upgrade-*
  owner: root:root
  permissions: '0755'

- path: /home/rancher/.profile
  content: |-
    set -a ; source /etc/environment ; set +a
  owner: rancher
  permissions: '0644'

run_cmd:
- "/etc/local.d/airgap.sh"

